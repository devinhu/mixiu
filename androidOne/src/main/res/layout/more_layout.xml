<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--<com.sd.one.widget.pulltorefresh.PullToRefreshScrollView-->
        <!--android:id="@+id/pullscrollview"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:scrollbars="none">-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/mine_detail_ray"
                android:layout_width="match_parent"
                android:layout_height="120dip"
                android:background="@drawable/selector_item_bg"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/avater_img"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/icon_default_head" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dip"
                    android:layout_toRightOf="@+id/avater_img"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="未登录"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                </LinearLayout>

                <ImageView style="@style/arrow_item_right" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_color" />

            <RelativeLayout
                android:id="@+id/my_album_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/selector_item_bg">

                <ImageView
                    android:id="@+id/icon_album"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/mine_list_icon_photo_album" />

                <TextView
                    android:id="@+id/album_txt"
                    style="@style/mine_item_content"
                    android:layout_toRightOf="@id/icon_album"
                    android:text="客户" />

                <ImageView style="@style/arrow_item_right" />

                <View
                    style="@style/mine_split_line"
                    android:layout_below="@+id/album_txt"
                    android:layout_toRightOf="@id/icon_album" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/my_order_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_item_bg">

                <ImageView
                    android:id="@+id/icon_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/mine_list_icon_order" />

                <TextView
                    android:id="@+id/order_txt"
                    style="@style/mine_item_content"
                    android:layout_toRightOf="@id/icon_order"
                    android:text="订单" />

                <ImageView style="@style/arrow_item_right" />

                <View
                    style="@style/mine_split_line"
                    android:layout_below="@+id/order_txt"
                    android:layout_toRightOf="@id/icon_order" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/my_wallet_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_item_bg">

                <ImageView
                    android:id="@+id/icon_wallet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/mine_list_icon_wallet" />

                <TextView
                    android:id="@+id/wallet_txt"
                    style="@style/mine_item_content"
                    android:layout_toRightOf="@id/icon_wallet"
                    android:text="钱包" />

                <ImageView style="@style/arrow_item_right" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/split_line" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="10dp"
                android:background="@color/split_line" />

            <RelativeLayout
                android:id="@+id/my_comment_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_item_bg">

                <ImageView
                    android:id="@+id/icon_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/mine_list_icon_comments" />

                <TextView
                    android:id="@+id/comment_txt"
                    style="@style/mine_item_content"
                    android:layout_toRightOf="@id/icon_comment"
                    android:text="我的评论" />

                <ImageView style="@style/arrow_item_right" />

                <View
                    style="@style/mine_split_line"
                    android:layout_below="@+id/comment_txt"
                    android:layout_toRightOf="@id/icon_comment" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/my_attention_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_item_bg">

                <ImageView
                    android:id="@+id/icon_attention"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/mine_list_icon_focus" />

                <TextView
                    android:id="@+id/attention_txt"
                    style="@style/mine_item_content"
                    android:layout_toRightOf="@id/icon_attention"
                    android:text="我的关注" />

                <ImageView style="@style/arrow_item_right" />

                <View
                    style="@style/mine_split_line"
                    android:layout_below="@+id/attention_txt"
                    android:layout_toRightOf="@id/icon_attention" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/my_service_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_item_bg"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/icon_service"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/mine_list_icon_service" />

                <TextView
                    android:id="@+id/service_txt"
                    style="@style/mine_item_content"
                    android:layout_toRightOf="@id/icon_service"
                    android:text="服务项目" />

                <ImageView style="@style/arrow_item_right" />

                <View
                    style="@style/mine_split_line"
                    android:layout_below="@+id/service_txt"
                    android:layout_toRightOf="@id/icon_service" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/my_lovetips_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_item_bg">

                <ImageView
                    android:id="@+id/icon_lovetips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/mine_list_icon_dating_primer" />

                <TextView
                    android:id="@+id/lovetips_txt"
                    style="@style/mine_item_content"
                    android:layout_toRightOf="@id/icon_lovetips"
                    android:text="恋爱攻略" />

                <ImageView style="@style/arrow_item_right" />

                <View
                    style="@style/mine_split_line"
                    android:layout_below="@+id/lovetips_txt"
                    android:layout_toRightOf="@id/icon_lovetips" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/my_invite_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_item_bg">

                <ImageView
                    android:id="@+id/icon_invite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/mine_list_icon_invitation" />

                <TextView
                    android:id="@+id/invite_txt"
                    style="@style/mine_item_content"
                    android:layout_toRightOf="@id/icon_invite"
                    android:text="邀请有礼" />

                <ImageView style="@style/arrow_item_right" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/split_line" />
        </LinearLayout>
    <!--</com.sd.one.widget.pulltorefresh.PullToRefreshScrollView>-->

</LinearLayout>
